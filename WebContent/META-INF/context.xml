<?xml version="1.0" encoding="UTF-8"?>
<Context displayName="JSP Servlet Example" docBase="example" path="/example" reloadable="true">
	<Resource name="jdbc/db" type="javax.sql.DataSource"
		username="root"
		password="password"
		driverClassName="com.mysql.jdbc.Driver"
		url="jdbc:mysql://localhost:3306/ipo"
		connectionProperties="useSSL=true;useUnicode=yes;characterEncoding=utf8;"
		maxActive="8"
		maxIdle="4"
		maxWait="5000" />
</Context>
